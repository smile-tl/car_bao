<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/detection_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mmm" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detection_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万事车行" />

            <TextView
                android:id="@+id/detection_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwqqqqqqqqqqqqqqqoooooooooooooooooooooooooooooo5555555555555" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom|right"
                android:gravity="bottom|right"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/detection_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:id="@+id/detection_meters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="0.5公里" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>